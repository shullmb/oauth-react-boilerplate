{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": false,
		"moduleResolution": "node",
		"sourceMap": false,
		"outDir": "build",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		},
		"lib": ["es2015"]
	},
	"include": ["src/**/*", "src/views"]
}
